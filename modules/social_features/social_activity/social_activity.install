/**
 * Update the listed below message template files as per new email style.
 *
 * 1. message.template.create_comment_author_node_post
 * 2. message.template.create_comment_post_profile
 * 3. message.template.create_comment_reply
 * 4. message.template.create_content_in_joined_group
 * 5. message.template.create_post_profile
 * 6. message.template.event_request_approved
 * 7. message.template.request_event_enrollment.
 *
 * Added new 'preview' and 'cta_button' tokens to these templates.
 */
function social_activity_update_9001() {
  // Prepare the path.
  $path = drupal_get_path('module', 'social_activity') . '/config/static/';

  $message_templates = [
    'message.template.create_comment_author_node_post' => $path . 'message.template.create_comment_author_node_post_9001.yml',
    'message.template.create_comment_post_profile' => $path . 'message.template.create_comment_post_profile_9001.yml',
    'message.template.create_comment_reply' => $path . 'message.template.create_comment_reply_9001.yml',
    'message.template.create_content_in_joined_group' => $path . 'message.template.create_content_in_joined_group_9001.yml',
    'message.template.create_post_profile' => $path . 'message.template.create_post_profile_9001.yml',
    'message.template.event_request_approved' => $path . 'message.template.event_request_approved_9001.yml',
    'message.template.join_to_group' => $path . 'message.template.join_to_group_9001.yml',
    'message.template.request_event_enrollment' => $path . 'message.template.request_event_enrollment_9001.yml',
  ];

  // Retrieves the configuration factory.
  $config_factory = \Drupal::configFactory();

  // Update each template file.
  foreach ($message_templates as $key => $config_file) {
    if (is_file($config_file)) {
      $settings = Yaml::parse(file_get_contents($config_file));
      if (is_array($settings)) {
        $config = $config_factory->getEditable($key);
        $config->setData($settings)->save(TRUE);
      }
    }
  }
}
